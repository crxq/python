#continue跳过当前循环，直接开始下次
input('请输入回车进入下一题')
n=0
while n<10:
    n=n+1
    print(n)


n=0
while n<10:
    n=n+1
    if n%2==0:
        continue
    print(n)


n=0
while n<10:
    n=n+1
    if n%2==0:
        break
    print(n)


#break中断循环
input('请输入回车进入下一题')
n=1
while n<=100:
    print(n)
    n = n + 1
print('end')


n=1
while n<=100:
    if n>10:
        break
    print(n)
    n = n + 1
print('end')



input('请输入回车进入下一题')
#while循环
sum=0
n=1
while n<=99:
    sum=sum+n
    n=n+2
    if n>99:
        print(sum)

sum=0
n=99
while n>0:
    sum=sum+n
    n=n-2
    if n<1:
        print(sum)


