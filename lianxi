input('请输入回车进入下一题：')
#计算身高体重指数
height=1.75
weight=80.5
bmi=80.5/(1.75*1.75)

if bmi<18.5:
    print('过轻')
elif bmi<25:
    print('正常')
elif bmi<28:
    print('过重')
elif bmi<32:
    print('肥胖')
else:
    print('严重肥胖')
print('小明身高%f,体重%f,BMI为%f'%(height,weight,bmi))



input('请输入回车进入下一题：')
#计算身高体重指数
height=float(input('请输入你的身高：'))
weight=float(input('请输入你的体重：'))
bmi=weight/(height*height)
if bmi<18.5:
    print('你的体重过轻')
elif 18.5<=bmi<25:
    print('你的体重正常')
elif 25<=bmi<28:
    print('你的体重过重')
elif 28<=bmi<32:
    print('你有肥胖的趋向')
elif 32<=bmi:
    print('你现在严重肥胖')


